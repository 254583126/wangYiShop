.indexContainer .header {
  display: flex;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 20rpx;
}
.indexContainer .header .search {
  position: relative;
  width: 420rpx;
  height: 60rpx;
  background: #eee;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  font-size: 30rpx;
  top: 15rpx;
  left: 10rpx;
}
.indexContainer .header .search input {
  width: 370rpx;
  margin-left: 50rpx;
  height: 60rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 26rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0 4rpx;
}
.navScroll {
  white-space: nowrap;
}
.navScroll .navItem {
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  display: inline-block;
}
.navScroll .navItem.active {
  border-bottom: 1rpx solid #bb2c08;
}
.test {
  font-size: 5rpx;
}

